void setup()
{
  Wire.begin();

  oled.begin();
  oled.clear(ALL);
  oled.display();
  delay(1000);
  oled.clear(PAGE);
  
  proximitySensor.begin();
  proximitySensor.setLEDCurrent(200);
  proximitySensor.setProxIntegrationTime(8);

  for(byte x = 0 ; x < 8 ; x++)
  {
    startingProxValue += proximitySensor.getProximity();
  }
  startingProxValue /= 8;

  deltaNeeded = (float)startingProxValue * 0.05;
  if(deltaNeeded < 5) deltaNeeded = 5;
}

void loop()
{
  unsigned int proxValue = proximitySensor.getProximity();

  if(proxValue > (startingProxValue + deltaNeeded))
  {
    nothingThere = false;
    oled.drawBitmap(filled);
    oled.display();
  }
  else
  {
    nothingThere = true;
    oled.clear(ALL);
    oled.clear(PAGE);
    oled.display();
  }
}
